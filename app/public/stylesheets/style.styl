*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Alegreya SC', serif
	-webkit-box-sizing border-box // Safari/Chrome, other WebKit
	-moz-box-sizing border-box    // Firefox, other Gecko
	box-sizing border-box         // Opera/IE 8+
	position relative // lost veel frustraties op :-)

html, body
	width 100%
	height 100%
	font-size 16px

body
	background-color #000
	position relative
	color #FFF

a
	color inherit
	margin inherit

.link
	text-decoration underline
.link:hover
	text-decoration none

.fancybg
	width 100%
	height 100%
	position fixed
	top 0px
	left 0px
	z-index -1
	border none

.staticbg
	background-image url("/images/staticbg.jpg")
	background-size cover
	background-position center
	width 100%
	height 100%
	position fixed
	top 0px
	left 0px
	z-index -1

.christmassy
	font-size 33px
	color #990000

.overlay
	top 40px
	width 770px
	max-width 80%
	margin-left auto
	margin-right auto
	background-color rgba(0,0,0,0.5)
	background-image radial-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5))
	-webkit-font-smoothing antialiased
	text-align center
	background-color rgba(52, 56, 63, 0.88)
	border 3px solid #fff;
	padding 30px 50px
	border-radius: 10px
	color #fff
	font-size 20px
	-webkit-box-shadow: 0 0 20px #F1D6DC
	box-shadow 0 0 20px #F1D6DC
	text-align center

	.title
		font-size 45px
		font-weight normal
		margin 10px
		font-family 'Roboto', sans-serif
		line-height 40px

	.subtitle
		font-size 13px
		font-style italic

	.imagecontainer
		background-image url("/images/martijn.jpg")
		height 384px
		width 672px
		background-size contain
		background-repeat no-repeat
		background-position center
		margin-left auto
		margin-right auto

	.button
		padding 20px
		width 104px
		height 104px
		display inline-block
		margin-top 50px
		-webkit-box-shadow inset 0 0 3px #60cbfa, 0 0 50px rgb(50,200,255, 0.5)
		box-shadow inset 0 0 3px #60cbfa, 0 0 50px rgb(50,200,255, 0.5)
		text-shadow 0 -1px rgba(0,0,0,0.5)
		border-color #34BFF3 rgba(0,0,0,0.05) #003C8B
		background #D8DFE2
		border-radius 15px
		font-size 16px
		cursor pointer

		img
			width 100%
			height 100%
			cursor pointer

		.fileinput
			height 100%
			width 100%
			position absolute
			left 0px
			right 0px
			opacity 0
			margin-top -20px // same as padding of button
			cursor pointer

	.button.left
		margin-right 115px



#shareimage
	max-height 65%
	max-width 90%
	border 3px solid #fff
	border-radius 15px

.share
	margin-left 10px

	img
		max-width 15%