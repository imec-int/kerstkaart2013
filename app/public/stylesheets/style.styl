*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Alegreya SC', serif
	-webkit-box-sizing border-box // Safari/Chrome, other WebKit
	-moz-box-sizing border-box    // Firefox, other Gecko
	box-sizing border-box         // Opera/IE 8+
	position relative // lost veel frustraties op :-)

html, body
	width 100%
	height 100%
	font-size 16px

body
	background-color #000
	position relative
	text-align center
	color #FFF

a
	color inherit
	margin inherit

.link
	text-decoration underline
.link:hover
	text-decoration none

.fancybg
	width 100%
	height 100%
	position fixed
	top 0px
	left 0px
	z-index -1
	border none

.staticbg
	background-image url("/images/staticbg_transp.jpg")
	background-size cover
	background-position center
	width 100%
	height 100%
	position fixed
	top 0px
	left 0px
	z-index -1



.christmassy
	font-size 33px
	color #990000

#shareimage
	max-height 65%
	max-width 90%
	border 3px solid #fff
	border-radius 15px

.share
	margin-left 10px

	img
		max-width 15%